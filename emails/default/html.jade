doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
  head
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title Actionable emails e.g. reset password
  body(itemscope='', itemtype='http://schema.org/EmailMessage')
    table.body-wrap
      tr
        td
        td.container(width='600')
          .content
            each issue in issues
              table.main(width='100%', cellpadding='0', cellspacing='0', itemprop='action', itemscope='', itemtype='http://schema.org/ConfirmAction')
                tr
                  td.alert.alert-grey ##{issue.number} #{issue.title}
                tr
                  td
                    meta(itemprop='name', content='Confirm Email')
                    table(width='100%', cellpadding='0', cellspacing='0')
                      each error in issue.errors
                        tr
                          td.content-block.underlined #{error}
                      tr
                        td.aligncenter.content-block(itemprop='handler', itemscope='', itemtype='http://schema.org/HttpActionHandler')
                          a.btn-primary(href!=issue.html_url, itemprop='url') View on Github
            .footer
              table(width='100%')
                tr
                  td.aligncenter.content-block
                    | This report has been generated by&nbsp;
                    a(href='https://github.com/bnetter/chiquita') Chiquita
        td
